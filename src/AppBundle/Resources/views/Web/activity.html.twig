{% extends 'AppBundle:Partial:base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Activity</h1>
        </div>
    </div>
    <div class="row activity-add">
        <div class="panel panel-default">
            <div class="panel-heading" ng-hide="activity.id">
                Add
            </div>
            <div class="panel-heading" ng-show="activity.id">
                Edit
            </div>
            <div class="panel-body">
                <form role="form">
                    <div {{ angular.error_cls('form-group ', 'day') }}>
                        <div class="date thedatepicker">
                            <label>Date</label>
                            <div class="input-group">
                                <input class="form-control" ng-model="activity.day" type="text" readonly>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>
                        {{ angular.error_label('day') }}
                    </div>

                    <div {{ angular.error_cls('form-group', 'distance') }}>
                        <label>Distance</label>
                        <input type="number" ng-model="activity.distance" class="form-control"
                               placeholder="expressed in meters">
                        {{ angular.error_label('distance') }}
                    </div>
                    <div {{ angular.error_cls('form-group', 'time') }}>
                        <label>Time</label>
                        <input type="number" ng-model="activity.time" class="form-control"
                               placeholder="expressed in minutes">
                        {{ angular.error_label('time') }}
                    </div>


                    <button ng-hide="activity.id" ng-click="doSave()" type="submit" class="btn btn-default"><i
                                class="fa fa-plus fa-fw"></i> Add
                    </button>
                    <button ng-hide="activity.id" ng-click="doSave(true)" type="submit" class="btn btn-default"><i
                                class="fa fa-plus fa-fw"></i> Add and
                        go to list
                    </button>

                    <button ng-show="activity.id" ng-click="doSave()" type="submit" class="btn btn-default"><i
                                class="fa fa-save fa-fw"></i> Save
                    </button>
                    <button ng-show="activity.id" ng-click="doSave(true)" type="submit" class="btn btn-default"><i
                                class="fa fa-save fa-fw"></i> Save and
                        go to list
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}