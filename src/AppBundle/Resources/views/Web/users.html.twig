{% extends 'AppBundle:Partial:base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Users</h1>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Admin</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Registration date</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="user in users" ng-class-odd="'odd'" ng-class-even="'even'">
                                <td>{{ '{{ user.is_admin ? \'Y\':\'N\' }}' }}</td>
                                <td>{{ '{{ user.name }}' }}</td>
                                <td>{{ '{{ user.email }}' }}</td>
                                <td>{{ '{{ user.registered }}' }}</td>
                                <td>
                                    <a ng-href="#/users/{{ '{{ user.id }}' }}"><i class="fa fa-pencil fa-fw"></i>Edit</a>
                                    <a ng-click="doLogin(user)"><i class="fa fa-sign-in fa-fw"></i>Login as user</a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}