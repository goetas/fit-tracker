{% extends 'AppBundle:Partial:base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Activities</h1>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                {% include "AppBundle:Web:partial/activities-filter.html.twig" %}

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Day</th>
                                <th>Time (min)</th>
                                <th>Distance (m)</th>
                                <th>Speed (m/min)</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="acitivity in activities" ng-class-odd="'odd'" ng-class-even="'even'"
                                class="gradeX">
                                <td>{{ '{{ acitivity.day }}' }}</td>
                                <td>{{ '{{ acitivity.time }}' }}</td>
                                <td>{{ '{{ acitivity.distance }}' }}</td>
                                <td>{{ '{{ ( acitivity.distance/acitivity.time ) | number:2 }}' }}</td>
                                <td>
                                    <a ng-href="#/activities/{{ '{{ acitivity.id }}' }}"><i class="fa fa-pencil fa-fw"></i>Edit</a>
                                    <a ng-click="doDelete(acitivity)"><i class="fa fa-times fa-fw"></i> Delete</a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}