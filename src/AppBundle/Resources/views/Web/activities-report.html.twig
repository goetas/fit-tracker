{% extends 'AppBundle:Partial:base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Activities report</h1>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                {% include "AppBundle:Web:partial/activities-filter.html.twig" %}

                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Week</th>
                                <th>Year</th>
                                <th>Speed (m/min)</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="acitivity in activities" ng-class-odd="'odd'" ng-class-even="'even'"
                                class="gradeX">
                                <td>{{ '{{ acitivity.week }}' }}</td>
                                <td>{{ '{{ acitivity.year }}' }}</td>
                                <td>{{ '{{ acitivity.speed | number:2}}' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}