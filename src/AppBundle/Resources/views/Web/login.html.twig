{% extends 'AppBundle:Partial:base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form role="form" novalidate>
                        <fieldset>
                            <div {{ angular.error_cls('form-group input-group', 'email') }}>
                                <span class="input-group-addon">@</span>
                                <input class="form-control" required placeholder="E-mail" ng-model="formData.email"
                                       type="text" autofocus>

                                {{ angular.error_label('email') }}
                            </div>
                            <div {{ angular.error_cls('form-group', 'password') }}>
                                <input class="form-control" required placeholder="Password" ng-model="formData.password"
                                       type="password" value="">
                                {{ angular.error_label('password') }}
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <a ng-click="doLogin()" class="btn btn-lg btn-success btn-block">Login</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}